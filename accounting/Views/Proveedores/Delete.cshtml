@model accounting.ViewModels.ProveedorVM

@{
    ViewBag.Title = "Eliminación de un proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminación de un proveedor</h2>
<h3>¿Está seguro que desea eliminar al proveedor?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Código:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.codigo)
        </dd>

        <dt>
            @Html.Label("Razón Social:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.razonSocial)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar al listado", "Index")
        </div>
    }
</div>
