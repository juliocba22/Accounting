@model accounting.ViewModels.ProductServiceVM

@{
    ViewBag.Title = "Eliminación de un Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminación de un Cliente</h2>

<h3>¿Está seguro que desea eliminar el Producto/Servicio?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Código:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>
            @Html.Label("Tipo:")
        </dt>
        <dd>
            @ViewBag.TipoDetalle
        </dd>

        <dt>
            @Html.Label("Nombre: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            @Html.Label("Valor Unitario: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.valorUnitario)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    @Html.ActionLink("Regresar al Listado", "Index")   | 
    <input type="submit" value="Eliminar" class="btn btn-default" />
</div>
    }
</div>
