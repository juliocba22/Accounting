@model accounting.ViewModels.ProductServiceVM

@{
    ViewBag.Title = "Detalle del Producto/Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Detalle del Producto/Servicio </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Código:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>
            @Html.Label("Tipo:")
        </dt>
        <dd>
            @ViewBag.TipoDetalle
        </dd>

        <dt>
            @Html.Label("Nombre: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt>
            @Html.Label("Unidad Medida:")
        </dt>
        <dd>
            @ViewBag.UMDetalle
        </dd>

        <dt>
            @Html.Label("Valor Unitario: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.valorUnitario)
        </dd>
        <dt>
            @Html.Label("Costo Profesional: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.costoProfesional)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Regresar al Listado", "Index") |
    @Html.ActionLink("Editar", "Edit", new { id = Model.id })
</p>
