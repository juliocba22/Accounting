<div>
    @Html.ActionLink("Regresar al listado", "Index")
</div>



@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
            $().ready(function () {

                if (isNotEmpty($("#id").val())) {
                    alert("llega 1");
                    getImage($("#id").val());
                }

                function getImage(id) {
                    alert(id);
                    $("#id").empty();
                    var url = "@Url.Action("getImage", "Expenses")?id=" + id;
                    $.getJSON(
                    url,
                        function (data) {
                            $("#image").val(data);
                    });


                };

    </script>
}
