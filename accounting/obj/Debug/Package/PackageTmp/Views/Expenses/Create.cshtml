            @Html.TextBoxFor(model => model.date_expense, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "Date" })
            @Html.ValidationMessageFor(model => model.date_expense, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
