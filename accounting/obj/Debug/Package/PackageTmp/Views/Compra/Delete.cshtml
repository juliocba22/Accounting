@model accounting.ViewModels.CompraDeleteVM

@{
    ViewBag.Title = "Eliminación de una compra";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminación de una compra</h2>
<h3>¿Está seguro que desea eliminar la compra?</h3>
<div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.Label("Proveedor:")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Proveedor)
            </dd>
            <dt>
                @Html.Label("Comprobante:")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TipoComprobante)
            </dd>
            <dt>
                @Html.Label("Nro Factura:")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NroFactura)
            </dd>
            <dt>
                @Html.Label("Fecha emisión:")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FechaEmision)
            </dd>
            <dt>
                @Html.Label("Importe:")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Importe)
            </dd>
        </dl>
        <div class="form-actions no-color">
            @Html.ActionLink("Regresar al Listado ", "Index") |
            <input type="submit" value="Eliminar" class="btn btn-default" />
        </div>
    }
</div>

