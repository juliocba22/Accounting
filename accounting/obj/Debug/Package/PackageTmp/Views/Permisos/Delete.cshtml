@model accounting.ViewModels.PermisoCreateVM
@{
    ViewBag.Title = "Eliminar";
}

<h2>Delete</h2>

<h3>Esta seguro de borrar esta pagina asignada?</h3>
<div>
    @*<h4>expense</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.page_name)
        </dt>

        <dd>
            @ViewBag.page_name
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.rol_name)
        </dt>

        <dd>
            @ViewBag.rol_name
        </dd>
    </dl>

    @using (Html.BeginForm("Delete", "Permisos", FormMethod.Post, new { id = Model.pagina_id }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a Lista", "Index")
        </div>
    }
</div>


